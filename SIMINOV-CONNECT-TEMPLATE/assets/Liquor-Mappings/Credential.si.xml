<database-mapping-descriptor>

	<table table_name="CREDENTIAL" class_name="siminov.connect.template.model.Credential">
		
		<column variable_name="accountId" column_name="ACCOUNT_ID">
			<property name="type">java.lang.String</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</column>		
		
		<column variable_name="token" column_name="TOKEN"> 
			<property name="type">java.lang.String</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</column>

		<column variable_name="active" column_name="ACTIVE"> 
			<property name="type">boolean</property>
		</column>

		<relationships>
   			<one-to-many refer="credentialResources" refer_to="siminov.connect.template.model.CredentialResource" on_update="cascade" on_delete="cascade">
			    <property name="load">true</property>
   			</one-to-many>		
   		</relationships>
				
	</table>

</database-mapping-descriptor>