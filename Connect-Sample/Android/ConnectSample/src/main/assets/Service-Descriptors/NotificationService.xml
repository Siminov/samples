<service-descriptor>
    
    <property name="name">SIMINOV-CONNECT-NOTIFICATION-SERVICE</property>
    <property name="description">Siminov Connect Notification Service</property>
    <property name="protocol">HTTP</property>
    <property name="instance">10.0.2.2</property>
    <property name="port">8080</property>
	<property name="context">CONNECT-ENTERPRISE</property>    

    <requests>
     	<request>

        	<property name="name">REGISTER-DEVICE</property>
         	<property name="type">POST</property>
         	<property name="api">register-device</property>
         	<property name="handler">siminov.connect.sample.services.RegisterDevice</property>
	     	<property name="mode">SYNC</property>

	      	<header-parameters>
	     	    <header-parameter>
	     	        <property name="name">id</property>
	     	        <property name="value">{@resource ID}</property>
	     	    </header-parameter>
	      	</header-parameters>
     	
		</request>
     	<request>

        	<property name="name">UNREGISTER-DEVICE</property>
         	<property name="type">POST</property>
         	<property name="api">register-device</property>
         	<property name="handler">siminov.connect.sample.services.UnregisterDevice</property>
	     	<property name="mode">SYNC</property>

	      	<header-parameters>
	     	    <header-parameter>
	     	       	<property name="name">id</property>
	     	       	<property name="value">{@resource ID}</property>
	     	    </header-parameter>
	      	</header-parameters>
     	
		</request>
    </requests>
    
</service-descriptor>
